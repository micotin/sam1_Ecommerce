<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <%- include('partials/header') %>

    <main class="container mt-4">
        <!-- Hero Section -->
<section class="hero text-center">
    <div class="hero-content">
        <h1 class="display-4">Welcome to <span>Sam1 Flower Shop</span></h1>
        <p class="lead">Where beauty blooms and fairytales come to life.</p>
        <a href="/products" class="btn btn-primary btn-lg">Shop Now</a>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-products mt-3">
    <h2 class="text-center section-title">Featured Products</h2>
    <div class="row">
        <% products.forEach(function(product) { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card">
                    <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">$<%= parseFloat(product.price).toFixed(2) %></p>
                        <a href="/products/<%= product.id %>" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</section>

<section class="reviews-section mt-3"> 
    <h2 class="text-center section-title">Top Customer Reviews</h2>
    <div class="row">
        <% if (topReviews.length > 0) { %>
            <% topReviews.forEach(function(review) { %>
                <div class="col-md-4 mb-4">
                    <a href="/products/<%= review.productId %>" class="text-decoration-none text-dark">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= review.reviewerName %></h5>
                                <p class="card-text">
                                    <% for (let i = 0; i < review.rating; i++) { %>
                                        <i class="fas fa-star text-warning"></i>
                                    <% } %>
                                    <% for (let i = review.rating; i < 5; i++) { %>
                                        <i class="far fa-star text-warning"></i>
                                    <% } %>
                                </p>
                                <p class="card-text"><strong>Product:</strong> <%= review.productName %></p>
                                <p class="card-text"><%= review.comment %></p>
                                <p class="card-text"><strong>Votes:</strong> <%= review.votes %></p>
                                <p class="card-text"><small class="text-muted">Posted on: <%= new Date(review.created_at).toLocaleDateString() %></small></p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-center">No reviews available.</p>
        <% } %>
    </div>
</section>

        <!-- Visit Us Section -->
        <section class="visit-us text-center mt-5">
            <h2 class="section-title">Come Visit Us</h2>
            <p>Weâ€™re located at 123 Flower Street, Blossom City. Step into our garden and experience the magic!</p>
            <a href="/contact" class="btn btn-outline-success">Get Directions</a>
        </section>
    </main>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
